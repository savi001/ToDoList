<%- include("header") -%>


  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% newListItems.forEach(function(item) { %>
      <div class="item">
        <form action="/delete" method="post" class="item" >
          <input type="hidden" name="title" value=<%= listTitle %> >
        <input type="checkbox"  name="checkboxData" value = <%= item.id %>  onchange="this.form.submit()">
        <p><%=  item.name  %></p>
      </form>
      
      </div>
      <% }) %>

      <form class="item formItem" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value=<%= listTitle %>>+</button>
      </form>
  </div>

<%- include("footer") -%>
